package hello;

public class StringUtil {
	
	
	// compte le nombre de caractères autres que espace
	public int countCharacters(String texte) {
		int nbChar = 0;
		for (int i = 0; i < texte.length(); i++) {
			if(texte.contains(" "))	{
				nbChar --;
			} else {
				nbChar ++;
			}
				
		}
		return nbChar;
	}

}
