		article1.titre = "livre" ;
		article1.prix = 40;
		
		Article article2 = new Article();
		article2.titre = "cd" ;
		article2.prix = 10;
				
		Article article3 = new Article();
		article3.titre = "sac";
		article3.prix = 100;
		
		commande.add(article1);
		commande.add(article1);
		commande.add(article2);
		commande.add(article2);
		commande.add(article3);
		
		
		System.out.println(commande.panier[0]);
		System.out.println(commande.panier[1]);
		System.out.println(commande.panier[2]);
		System.out.println(commande.panier[3]);
