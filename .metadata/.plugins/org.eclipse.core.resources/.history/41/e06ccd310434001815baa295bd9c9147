package hello;

public class Ecommerce {

	public static void main(String[] args) {
				
		Commande commande = new Commande();
		
		Article article1 = new Article();
		article1.setTitre("livre");
		article1.setPrix(40);
		
		Article article2 = new Article();
		article2.setTitre("cd");
		article2.setPrix(10);
				
		Article article3 = new Article();
		article3.setTitre("sac");
		article3.setPrix(100);
		
		commande.add(article1);
		commande.add(article1);
		commande.add(article2);
		commande.add(article2);
		commande.add(article3);
		
		
		System.out.println(commande.getPanier[0]);
		System.out.println(commande.panier[1]);
		System.out.println(commande.panier[2]);
		System.out.println(commande.panier[3]);
		System.out.println(commande.panier[4]);	
		
		double total = commande.computeTotal();

		System.out.println("Le total commandé est: "+ total);
	}

}
