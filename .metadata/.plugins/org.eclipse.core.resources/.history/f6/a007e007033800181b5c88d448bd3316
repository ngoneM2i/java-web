package hello;

public class TTTGrid {

	private char[][] tab;

	public TTTGrid(int size) {
		tab = new char[size][size];
	}

	public void put(char c, int x, int y) {
		tab[x][y] = c;
	}
	
	Player p1 = new Player("Olivier", 'O');
	Player p2 = new Player("Xavier", 'X');
	
	p1.getNom();
	
